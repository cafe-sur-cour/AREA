NODE_ENV=production
NEXT_PUBLIC_API_URL=https://your-api-url.com
NODE_PORT=8080
NEXT_PORT=8081
DOC_PORT=5555
FRONTEND_URL=https://your-frontend-domain.com
BACKEND_URL=https://your-backend-domain.com
DOMAIN=your-domain.com
JWT_SECRET=your-jwt-secret

# Database configuration
DB_HOST=db
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your-db-password
DB_NAME=your-db-name

# Mobile build configuration
SKIP_APK_BUILD=true

# GHCR Token
GHCR_TOKEN=your-ghcr-token

# Dockerfile for everyday builds
# DOCKERFILE_MOBILE=deployment/Dockerfile.mobile
# Dockerfile for production builds
DOCKERFILE_MOBILE=deployment/Dockerfile.mobile.prod

# SMTP configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=465
SMTP_SECURE=true
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=XXX

# Error notifications
ERROR_NOTIFICATION_EMAIL=your-email@example.com
ERROR_NOTIFICATION_MIN_STATUS=400
ERROR_NOTIFICATION_ENABLED=true

# Webhook base URL
WEBHOOK_BASE_URL=https://your-webhook-base-url.com

# Webhook secret for all webhooks
WEBHOOK_SECRET=your-webhook-secret

# Github OAuth configuration
SERVICE_GITHUB_CLIENT_ID=XXX
SERVICE_GITHUB_CLIENT_SECRET=XXX
SERVICE_GITHUB_REDIRECT_URI=https://your-backend-domain.com/api/auth/github/callback
SERVICE_GITHUB_API_BASE_URL=https://your-github-api.com
GITHUB_APP_SLUG=your-github-app-slug

# Google OAuth configuration
SERVICE_GOOGLE_CLIENT_ID=XXX
SERVICE_GOOGLE_CLIENT_SECRET=XXX
SERVICE_GOOGLE_REDIRECT_URI=https://your-backend-domain.com/api/auth/google/callback
SERVICE_GOOGLE_API_BASE_URL=https://your-google-api.com
SERVICE_GOOGLE_AUTH_BASE_URL=https://your-google-auth.com

# Spotify OAuth configuration
SERVICE_SPOTIFY_CLIENT_ID=XXX
SERVICE_SPOTIFY_CLIENT_SECRET=XXX
SERVICE_SPOTIFY_REDIRECT_URI=https://your-backend-domain.com/api/auth/spotify/callback
SERVICE_SPOTIFY_API_BASE_URL=https://your-spotify-api.com
SERVICE_SPOTIFY_AUTH_BASE_URL=https://your-spotify-auth.com

# Microsoft OAuth configuration
SERVICE_MICROSOFT_CLIENT_ID=XXX
SERVICE_MICROSOFT_CLIENT_SECRET=XXX
SERVICE_MICROSOFT_TENANT_ID=XXX
SERVICE_MICROSOFT_REDIRECT_URI=https://your-backend-domain.com/api/auth/microsoft/callback
SERVICE_MICROSOFT_API_BASE_URL=https://your-microsoft-api.com
SERVICE_MICROSOFT_AUTH_BASE_URL=https://your-microsoft-auth.com

# Mobile callback URL for OAuth redirects
MOBILE_CALLBACK_URL=mobileapp://callback
ENCRYPTION_KEY=your-encryption-key

# Slack OAuth configuration
SERVICE_SLACK_CLIENT_ID=XXX
SERVICE_SLACK_CLIENT_SECRET=XXX
SERVICE_SLACK_SIGNING_SECRET=XXX
SERVICE_SLACK_REDIRECT_URI=https://your-backend-domain.com/api/auth/slack/callback
SERVICE_SLACK_AUTH_BASE_URL=https://your-slack-auth.com/oauth/v2
SERVICE_SLACK_API_BASE_URL=https://your-slack-api.com/api

# Facebook OAuth configuration
SERVICE_FACEBOOK_CLIENT_ID=XXX
SERVICE_FACEBOOK_CLIENT_SECRET=XXX
SERVICE_FACEBOOK_REDIRECT_URI=https://your-backend-domain.com/api/auth/facebook/callback
SERVICE_FACEBOOK_API_BASE_URL=https://your-facebook-api.com
