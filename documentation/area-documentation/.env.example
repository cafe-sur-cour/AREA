# ========================================
#         AREA Project Configuration
# ========================================
#
# This file contains all the environment variables needed to run the AREA project.
# Replace the placeholder values with your actual configuration.
# Never commit real secrets to version control!
#
# For more information, see the documentation at: https://area-docs.example.com
#

# ========================================
#         General Configuration
# ========================================
#
# Basic application settings and URLs
#

NODE_ENV=production                              # Environment mode (development/production)
NEXT_PUBLIC_API_URL=https://your-api-url.com     # Public API URL accessible from frontend
NODE_PORT=8080                                   # Port for the Node.js backend server
NEXT_PORT=8081                                   # Port for the Next.js frontend server
DOC_PORT=5555                                    # Port for the documentation server
FRONTEND_URL=https://your-frontend-domain.com    # URL of the frontend application
BACKEND_URL=https://your-backend-domain.com      # URL of the backend API
DOMAIN=your-domain.com                           # Main domain name for the application
JWT_SECRET=your-jwt-secret                       # Secret key for JWT token signing


# ========================================
#         Database Configuration
# ========================================
#
# PostgreSQL database connection settings
#

DB_HOST=db                                      # Database host (container name or IP)
DB_PORT=5432                                    # Database port (default PostgreSQL port)
DB_USER=postgres                                # Database username
DB_PASSWORD=your-db-password                    # Database password
DB_NAME=your-db-name                            # Database name


# ========================================
#         Mobile Build Configuration
# ========================================
#
# Settings for mobile app building
#

SKIP_APK_BUILD=true                             # Skip APK build process if true


# ========================================
#         Deployment Configuration
# ========================================
#
# Container and deployment related settings
#

GHCR_TOKEN=your-ghcr-token                      # GitHub Container Registry authentication token

# Dockerfile for everyday builds
# DOCKERFILE_MOBILE=deployment/Dockerfile.mobile
# Dockerfile for production builds
DOCKERFILE_MOBILE=deployment/Dockerfile.mobile.prod # Path to mobile Dockerfile for production


# ========================================
#         SMTP Configuration
# ========================================
#
# Email server settings for notifications
#

SMTP_HOST=smtp.gmail.com                        # SMTP server hostname
SMTP_PORT=465                                   # SMTP server port
SMTP_SECURE=true                                # Use secure connection (SSL/TLS)
SMTP_USER=your-email@gmail.com                  # SMTP authentication username
SMTP_PASSWORD=XXX                               # SMTP authentication password


# ========================================
#         Error Notifications
# ========================================
#
# Settings for error reporting via email
#

ERROR_NOTIFICATION_EMAIL=your-email@example.com # Email address for error notifications
ERROR_NOTIFICATION_MIN_STATUS=400               # Minimum HTTP status code to trigger notification
ERROR_NOTIFICATION_ENABLED=true                 # Enable/disable error notifications


# ========================================
#         Webhook Configuration
# ========================================
#
# Webhook related settings for external integrations
#

WEBHOOK_BASE_URL=https://your-webhook-base-url.com # Base URL for webhook endpoints
WEBHOOK_SECRET=your-webhook-secret               # Secret key for webhook signature verification


# ========================================
#         OAuth Configurations
# ========================================
#
# Third-party service integrations via OAuth
#

# Github OAuth
SERVICE_GITHUB_CLIENT_ID=XXX                                                         # GitHub OAuth client ID
SERVICE_GITHUB_CLIENT_SECRET=XXX                                                     # GitHub OAuth client secret
SERVICE_GITHUB_REDIRECT_URI=https://your-backend-domain.com/api/auth/github/callback # GitHub OAuth redirect URI
SERVICE_GITHUB_API_BASE_URL=https://your-github-api.com                              # GitHub API base URL
GITHUB_APP_SLUG=your-github-app-slug                                                 # GitHub App slug for integration

# Google OAuth
SERVICE_GOOGLE_CLIENT_ID=XXX                                                         # Google OAuth client ID
SERVICE_GOOGLE_CLIENT_SECRET=XXX                                                     # Google OAuth client secret
SERVICE_GOOGLE_REDIRECT_URI=https://your-backend-domain.com/api/auth/google/callback # Google OAuth redirect URI
SERVICE_GOOGLE_API_BASE_URL=https://your-google-api.com                              # Google API base URL
SERVICE_GOOGLE_AUTH_BASE_URL=https://your-google-auth.com                            # Google OAuth base URL

# Spotify OAuth
SERVICE_SPOTIFY_CLIENT_ID=XXX                                                        # Spotify OAuth client ID
SERVICE_SPOTIFY_CLIENT_SECRET=XXX                                                    # Spotify OAuth client secret
SERVICE_SPOTIFY_REDIRECT_URI=https://your-backend-domain.com/api/auth/spotify/callback # Spotify OAuth redirect URI
SERVICE_SPOTIFY_API_BASE_URL=https://your-spotify-api.com                            # Spotify API base URL
SERVICE_SPOTIFY_AUTH_BASE_URL=https://your-spotify-auth.com                          # Spotify OAuth base URL

# Microsoft OAuth
SERVICE_MICROSOFT_CLIENT_ID=XXX                                                      # Microsoft OAuth client ID
SERVICE_MICROSOFT_CLIENT_SECRET=XXX                                                  # Microsoft OAuth client secret
SERVICE_MICROSOFT_TENANT_ID=XXX                                                      # Microsoft tenant ID
SERVICE_MICROSOFT_REDIRECT_URI=https://your-backend-domain.com/api/auth/microsoft/callback # Microsoft OAuth redirect URI
SERVICE_MICROSOFT_API_BASE_URL=https://your-microsoft-api.com                        # Microsoft Graph API base URL
SERVICE_MICROSOFT_AUTH_BASE_URL=https://your-microsoft-auth.com                      # Microsoft OAuth base URL

# Slack OAuth
SERVICE_SLACK_CLIENT_ID=XXX                                                          # Slack OAuth client ID
SERVICE_SLACK_CLIENT_SECRET=XXX                                                      # Slack OAuth client secret
SERVICE_SLACK_SIGNING_SECRET=XXX                                                     # Slack signing secret for webhook verification
SERVICE_SLACK_REDIRECT_URI=https://your-backend-domain.com/api/auth/slack/callback   # Slack OAuth redirect URI
SERVICE_SLACK_AUTH_BASE_URL=https://your-slack-auth.com/oauth/v2                     # Slack OAuth base URL
SERVICE_SLACK_API_BASE_URL=https://your-slack-api.com/api                            # Slack API base URL

# Facebook OAuth
SERVICE_FACEBOOK_CLIENT_ID=XXX                                                       # Facebook OAuth client ID
SERVICE_FACEBOOK_CLIENT_SECRET=XXX                                                   # Facebook OAuth client secret
SERVICE_FACEBOOK_REDIRECT_URI=https://your-backend-domain.com/api/auth/facebook/callback # Facebook OAuth redirect URI
SERVICE_FACEBOOK_API_BASE_URL=https://your-facebook-api.com                          # Facebook Graph API base URL
SERVICE_FACEBOOK_AUTH_BASE_URL=https://your-facebook-auth.com                        # Facebook OAuth base URL

# Twitch OAuth
SERVICE_TWITCH_CLIENT_ID=XXX                                                         # Twitch OAuth client ID
SERVICE_TWITCH_CLIENT_SECRET=XXX                                                     # Twitch OAuth client secret
SERVICE_TWITCH_REDIRECT_URI=https://your-backend-domain.com/api/auth/twitch/callback # Twitch OAuth redirect URI
SERVICE_TWITCH_API_BASE_URL=https://your-twitch-api.com/helix                        # Twitch API base URL
SERVICE_TWITCH_AUTH_BASE_URL=https://your-twitch-auth.com/oauth2                     # Twitch OAuth base URL

# Reddit OAuth
SERVICE_REDDIT_CLIENT_ID=XXX                                                         # Reddit OAuth client ID
SERVICE_REDDIT_CLIENT_SECRET=XXX                                                     # Reddit OAuth client secret
SERVICE_REDDIT_REDIRECT_URI=https://your-backend-domain.com/api/auth/reddit/callback # Reddit OAuth redirect URI
SERVICE_REDDIT_API_BASE_URL=https://your-reddit-api.com                              # Reddit API base URL
SERVICE_REDDIT_AUTH_API_BASE_URL=https://your-reddit-auth-api.com                    # Reddit OAuth API base URL

# GitLab OAuth
SERVICE_GITLAB_CLIENT_ID=XXX                                                         # GitLab OAuth client ID
SERVICE_GITLAB_CLIENT_SECRET=XXX                                                     # GitLab OAuth client secret
SERVICE_GITLAB_REDIRECT_URI=https://your-backend-domain.com/api/auth/gitlab/callback/ # GitLab OAuth redirect URI
SERVICE_GITLAB_API_BASE_URL=https://your-gitlab-api.com/api/v4                        # GitLab API base URL
SERVICE_GITLAB_AUTH_BASE_URL=https://your-gitlab-auth.com                            # GitLab OAuth base URL


# ========================================
#         Encryption & Mobile
# ========================================
#
# Encryption keys and mobile app settings
#

ENCRYPTION_KEY=your-encryption-key              # Key for data encryption/decryption
MOBILE_CALLBACK_URL=mobileapp://callback        # Callback URL scheme for mobile OAuth redirects


# ========================================
#         End of Configuration
# ========================================
#
# Remember to copy this file to .env and fill in your actual values!
#
