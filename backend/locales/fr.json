{
  "services": {
    "github": {
      "name": "GitHub",
      "description": "Service GitHub pour les événements et actions de dépôt",
      "actions": {
        "github.push": {
          "name": "Push GitHub",
          "description": "Se déclenche lorsqu'un événement push se produit sur un dépôt sélectionné",
          "schema": {
            "fields": {
              "repository": {
                "label": "Dépôt (propriétaire/dépôt)",
                "placeholder": "octocat/Hello-World"
              },
              "branch": {
                "label": "Branche (optionnel, par défaut toutes les branches)",
                "placeholder": "main"
              }
            }
          }
        },
        "github.pull_request.opened": {
          "name": "Pull Request GitHub Ouverte",
          "description": "Se déclenche lorsqu'une nouvelle pull request est ouverte",
          "schema": {
            "fields": {
              "repository": {
                "label": "Dépôt (propriétaire/dépôt)",
                "placeholder": "octocat/Hello-World"
              }
            }
          }
        },
        "github.pull_request.merged": {
          "name": "Pull Request GitHub Fusionnée",
          "description": "Se déclenche lorsqu'une pull request est fusionnée",
          "schema": {
            "fields": {
              "repository": {
                "label": "Dépôt (propriétaire/dépôt)",
                "placeholder": "octocat/Hello-World"
              }
            }
          }
        }
      },
      "reactions": {
        "github.create_issue": {
          "name": "Créer une Issue GitHub",
          "description": "Crée une nouvelle issue dans le dépôt spécifié",
          "schema": {
            "fields": {
              "repository": {
                "label": "Dépôt (propriétaire/dépôt)",
                "placeholder": "octocat/Hello-World"
              },
              "title": {
                "label": "Titre de l'Issue",
                "placeholder": "Rapport de bug : Quelque chose est cassé"
              },
              "body": {
                "label": "Description de l'Issue"
              },
              "labels": {
                "label": "Étiquettes (séparées par des virgules)",
                "placeholder": "bug,urgent"
              },
              "assignees": {
                "label": "Assignés (noms d'utilisateur séparés par des virgules)",
                "placeholder": "octocat,monalisa"
              }
            }
          }
        },
        "github.add_comment": {
          "name": "Ajouter un Commentaire GitHub",
          "description": "Ajoute un commentaire à une issue ou pull request existante",
          "schema": {
            "fields": {
              "repository": {
                "label": "Dépôt (propriétaire/dépôt)",
                "placeholder": "octocat/Hello-World"
              },
              "issue_number": {
                "label": "Numéro d'Issue/PR",
                "placeholder": "123"
              },
              "body": {
                "label": "Corps du Commentaire",
                "placeholder": "Ceci est un commentaire automatisé depuis AREA"
              }
            }
          }
        }
      },
      "properties": {
        "repository": {
          "description": "Informations du dépôt",
          "full_name": {
            "description": "Nom complet du dépôt (propriétaire/dépôt)"
          },
          "name": {
            "description": "Nom du dépôt"
          },
          "owner": {
            "description": "Informations du propriétaire du dépôt",
            "login": {
              "description": "Nom d'utilisateur du propriétaire"
            },
            "id": {
              "description": "ID du propriétaire"
            }
          }
        },
        "ref": {
          "description": "Référence Git (branche/étiquette)"
        },
        "before": {
          "description": "SHA avant le push"
        },
        "after": {
          "description": "SHA après le push"
        },
        "commits": {
          "description": "Liste des commits dans le push",
          "items": {
            "description": "Informations du commit",
            "id": {
              "description": "SHA du commit"
            },
            "message": {
              "description": "Message du commit"
            },
            "author": {
              "description": "Informations de l'auteur du commit",
              "name": {
                "description": "Nom de l'auteur"
              },
              "email": {
                "description": "Email de l'auteur"
              }
            }
          }
        },
        "pusher": {
          "description": "Informations du pusher",
          "name": {
            "description": "Nom d'utilisateur du pusher"
          },
          "email": {
            "description": "Email du pusher"
          }
        },
        "action": {
          "description": "L'action qui a été effectuée"
        },
        "number": {
          "description": "Numéro de la pull request"
        },
        "pull_request": {
          "description": "Détails de la pull request",
          "id": {
            "description": "ID de la pull request"
          },
          "title": {
            "description": "Titre de la pull request"
          },
          "body": {
            "description": "Corps de la pull request"
          },
          "state": {
            "description": "État de la pull request"
          },
          "merged": {
            "description": "Si la pull request est fusionnée"
          },
          "merged_at": {
            "description": "Quand la pull request a été fusionnée"
          },
          "user": {
            "description": "Utilisateur qui a créé la pull request",
            "login": {
              "description": "Nom d'utilisateur"
            },
            "id": {
              "description": "ID utilisateur"
            }
          },
          "head": {
            "description": "Informations de la branche head",
            "ref": {
              "description": "Nom de la branche"
            },
            "sha": {
              "description": "SHA du commit"
            },
            "repo": {
              "description": "Informations du dépôt head",
              "full_name": {
                "description": "Nom complet du dépôt"
              }
            }
          },
          "base": {
            "description": "Informations de la branche base"
          }
        }
      }
    },
    "timer": {
      "name": "Minuteur",
      "description": "Service de minuterie pour les événements programmés",
      "actions": {
        "every_day_at_x_hour": {
          "name": "Tous les Jours à X Heure",
          "description": "Se déclenche une fois par jour à une heure spécifique les jours sélectionnés",
          "schema": {
            "fields": {
              "hour": {
                "label": "Heure (0-23)",
                "placeholder": "14"
              },
              "days": {
                "label": "Jours de la semaine",
                "options": {
                  "monday": "Lundi",
                  "tuesday": "Mardi",
                  "wednesday": "Mercredi",
                  "thursday": "Jeudi",
                  "friday": "Vendredi",
                  "saturday": "Samedi",
                  "sunday": "Dimanche"
                }
              }
            }
          }
        },
        "every_hour_at_intervals": {
          "name": "Toutes les Heures à X Minute",
          "description": "Se déclenche toutes les heures à une minute spécifique (00, 15, 30, ou 45)",
          "schema": {
            "fields": {
              "minute": {
                "label": "Minute",
                "options": {
                  "0": ":00",
                  "15": ":15",
                  "30": ":30",
                  "45": ":45"
                }
              }
            }
          }
        }
      },
      "properties": {
        "timestamp": {
          "description": "Horodatage ISO du déclenchement de la minuterie"
        },
        "hour": {
          "description": "L'heure qui a déclenché"
        },
        "day": {
          "description": "Le jour de la semaine"
        },
        "minute": {
          "description": "La minute qui a déclenché (0, 15, 30, ou 45)"
        }
      }
    },
    "google": {
      "name": "Google",
      "description": "Service Google pour l'authentification OAuth"
    },
    "spotify": {
      "name": "Spotify",
      "description": "Service Spotify pour l'intégration de streaming musical",
      "reactions": {
        "spotify.skip_track": {
          "name": "Passer la Piste Actuelle",
          "description": "Passe à la piste suivante dans la lecture actuelle de l'utilisateur",
          "schema": {
            "fields": []
          }
        },
        "spotify.pause_resume_playback": {
          "name": "Pause / Reprendre la Lecture",
          "description": "Bascule entre pause et reprise selon l'état actuel",
          "schema": {
            "fields": []
          }
        },
        "spotify.add_song_to_playlist": {
          "name": "Ajouter une Chanson à une Playlist",
          "description": "Ajoute la piste actuelle ou spécifiée à une playlist choisie (ou aux Chansons Aimées si aucune playlist spécifiée)",
          "schema": {
            "fields": {
              "playlist_id": {
                "label": "ID de Playlist (optionnel, ajoute aux Chansons Aimées si vide)",
                "placeholder": "spotify:playlist:37i9dQZF1DXcBWIGoYBM5M"
              },
              "track_uri": {
                "label": "URI de Piste (optionnel, utilise la piste en cours si vide)",
                "placeholder": "spotify:track:4iV5W9uYEdYUVa79Axb7Rh"
              }
            }
          }
        },
        "spotify.play_specific_track": {
          "name": "Jouer une Piste Spécifique",
          "description": "Démarre la lecture d'une URI de piste ou playlist donnée",
          "schema": {
            "fields": {
              "uri": {
                "label": "URI Spotify (piste, album, playlist, ou artiste)",
                "placeholder": "spotify:track:4iV5W9uYEdYUVa79Axb7Rh"
              },
              "device_id": {
                "label": "ID d'Appareil (optionnel, utilise l'appareil actif si vide)",
                "placeholder": "device_id_here"
              }
            }
          }
        },
        "spotify.set_volume": {
          "name": "Régler le Volume",
          "description": "Ajuste le volume de lecture à un niveau spécifié",
          "schema": {
            "fields": {
              "volume_percent": {
                "label": "Niveau de Volume (0-100)",
                "placeholder": "50"
              },
              "device_id": {
                "label": "ID d'Appareil (optionnel, utilise l'appareil actif si vide)",
                "placeholder": "device_id_here"
              }
            }
          }
        }
      },
      "properties": {
        "success": {
          "description": "Si l'opération a réussi"
        },
        "action": {
          "description": "L'action effectuée (pause ou reprise)"
        },
        "playlist_id": {
          "description": "L'ID de la playlist où la piste a été ajoutée (null si ajouté aux Chansons Aimées)"
        },
        "added_to_liked": {
          "description": "Si la piste a été ajoutée aux Chansons Aimées"
        },
        "track_uri": {
          "description": "L'URI de la piste qui a été ajoutée"
        },
        "uri": {
          "description": "L'URI qui a été jouée"
        },
        "device_id": {
          "description": "L'ID de l'appareil utilisé"
        },
        "volume_percent": {
          "description": "Le niveau de volume qui a été défini"
        }
      }
    }
  }
}
