{
  "services": {
    "github": {
      "name": "GitHub",
      "description": "GitHub service for repository events and actions",
      "actions": {
        "github.push": {
          "name": "GitHub Push",
          "description": "Triggers when a push event occurs on a selected repository",
          "schema": {
            "fields": {
              "repository": {
                "label": "Repository (owner/repo)",
                "placeholder": "octocat/Hello-World"
              },
              "branch": {
                "label": "Branch (optional, defaults to all branches)",
                "placeholder": "main"
              }
            }
          }
        },
        "github.pull_request.opened": {
          "name": "GitHub Pull Request Opened",
          "description": "Triggers when a new pull request is opened",
          "schema": {
            "fields": {
              "repository": {
                "label": "Repository (owner/repo)",
                "placeholder": "octocat/Hello-World"
              }
            }
          }
        },
        "github.pull_request.merged": {
          "name": "GitHub Pull Request Merged",
          "description": "Triggers when a pull request is merged",
          "schema": {
            "fields": {
              "repository": {
                "label": "Repository (owner/repo)",
                "placeholder": "octocat/Hello-World"
              }
            }
          }
        }
      },
      "reactions": {
        "github.create_issue": {
          "name": "Create GitHub Issue",
          "description": "Creates a new issue in the specified repository",
          "schema": {
            "fields": {
              "repository": {
                "label": "Repository (owner/repo)",
                "placeholder": "octocat/Hello-World"
              },
              "title": {
                "label": "Issue Title",
                "placeholder": "Bug report: Something is broken"
              },
              "body": {
                "label": "Issue Description"
              },
              "labels": {
                "label": "Labels (comma-separated)",
                "placeholder": "bug,urgent"
              },
              "assignees": {
                "label": "Assignees (comma-separated usernames)",
                "placeholder": "octocat,monalisa"
              }
            }
          }
        },
        "github.add_comment": {
          "name": "Add GitHub Comment",
          "description": "Adds a comment to an existing issue or pull request",
          "schema": {
            "fields": {
              "repository": {
                "label": "Repository (owner/repo)",
                "placeholder": "octocat/Hello-World"
              },
              "issue_number": {
                "label": "Issue/PR Number",
                "placeholder": "123"
              },
              "body": {
                "label": "Comment Body",
                "placeholder": "This is an automated comment from AREA"
              }
            }
          }
        }
      },
      "properties": {
        "repository": {
          "description": "Repository information",
          "full_name": {
            "description": "Full repository name (owner/repo)"
          },
          "name": {
            "description": "Repository name"
          },
          "owner": {
            "description": "Repository owner information",
            "login": {
              "description": "Owner username"
            },
            "id": {
              "description": "Owner ID"
            }
          }
        },
        "ref": {
          "description": "Git reference (branch/tag)"
        },
        "before": {
          "description": "SHA before the push"
        },
        "after": {
          "description": "SHA after the push"
        },
        "commits": {
          "description": "List of commits in the push",
          "items": {
            "description": "Commit information",
            "id": {
              "description": "Commit SHA"
            },
            "message": {
              "description": "Commit message"
            },
            "author": {
              "description": "Commit author information",
              "name": {
                "description": "Author name"
              },
              "email": {
                "description": "Author email"
              }
            }
          }
        },
        "pusher": {
          "description": "Pusher information",
          "name": {
            "description": "Pusher username"
          },
          "email": {
            "description": "Pusher email"
          }
        },
        "action": {
          "description": "The action that was performed"
        },
        "number": {
          "description": "Pull request number"
        },
        "pull_request": {
          "description": "Pull request details",
          "id": {
            "description": "Pull request ID"
          },
          "title": {
            "description": "Pull request title"
          },
          "body": {
            "description": "Pull request body"
          },
          "state": {
            "description": "Pull request state"
          },
          "merged": {
            "description": "Whether pull request is merged"
          },
          "merged_at": {
            "description": "When pull request was merged"
          },
          "user": {
            "description": "User who created the pull request",
            "login": {
              "description": "Username"
            },
            "id": {
              "description": "User ID"
            }
          },
          "head": {
            "description": "Head branch information",
            "ref": {
              "description": "Branch name"
            },
            "sha": {
              "description": "Commit SHA"
            },
            "repo": {
              "description": "Head repository information",
              "full_name": {
                "description": "Full repository name"
              }
            }
          },
          "base": {
            "description": "Base branch information"
          }
        }
      }
    },
    "timer": {
      "name": "Timer",
      "description": "Timer service for scheduled events",
      "actions": {
        "every_day_at_x_hour": {
          "name": "Every Day at X Hour",
          "description": "Triggers once a day at a specific hour on selected days",
          "schema": {
            "fields": {
              "hour": {
                "label": "Hour (0-23)",
                "placeholder": "14"
              },
              "days": {
                "label": "Days of the week",
                "options": {
                  "monday": "Monday",
                  "tuesday": "Tuesday",
                  "wednesday": "Wednesday",
                  "thursday": "Thursday",
                  "friday": "Friday",
                  "saturday": "Saturday",
                  "sunday": "Sunday"
                }
              }
            }
          }
        },
        "every_hour_at_intervals": {
          "name": "Every Hour at X Minute",
          "description": "Triggers every hour at a specific minute (00, 15, 30, or 45)",
          "schema": {
            "fields": {
              "minute": {
                "label": "Minute",
                "options": {
                  "0": ":00",
                  "15": ":15",
                  "30": ":30",
                  "45": ":45"
                }
              }
            }
          }
        }
      },
      "properties": {
        "timestamp": {
          "description": "ISO timestamp of when the timer triggered"
        },
        "hour": {
          "description": "The hour that triggered"
        },
        "day": {
          "description": "The day of the week"
        },
        "minute": {
          "description": "The minute that triggered (0, 15, 30, or 45)"
        }
      }
    },
    "google": {
      "name": "Google",
      "description": "Google OAuth service for authentication"
    },
    "spotify": {
      "name": "Spotify",
      "description": "Spotify service for music streaming integration",
      "reactions": {
        "spotify.skip_track": {
          "name": "Skip Current Track",
          "description": "Skips to the next track in the user's current playback",
          "schema": {
            "fields": {}
          }
        },
        "spotify.pause_resume_playback": {
          "name": "Pause / Resume Playback",
          "description": "Toggles playback pause or resume depending on current state",
          "schema": {
            "fields": {}
          }
        },
        "spotify.add_song_to_playlist": {
          "name": "Add Song to Playlist",
          "description": "Adds the current or specified track to a chosen playlist (or to Liked Songs if no playlist specified)",
          "schema": {
            "fields": {
              "playlist_id": {
                "label": "Playlist ID (optional, adds to Liked Songs if empty)",
                "placeholder": "spotify:playlist:37i9dQZF1DXcBWIGoYBM5M"
              },
              "track_uri": {
                "label": "Track URI (optional, uses currently playing track if empty)",
                "placeholder": "spotify:track:4iV5W9uYEdYUVa79Axb7Rh"
              }
            }
          }
        },
        "spotify.play_specific_track": {
          "name": "Play Specific Track",
          "description": "Starts playback of a given track or playlist URI",
          "schema": {
            "fields": {
              "uri": {
                "label": "Spotify URI (track, album, playlist, or artist)",
                "placeholder": "spotify:track:4iV5W9uYEdYUVa79Axb7Rh"
              },
              "device_id": {
                "label": "Device ID (optional, uses active device if empty)",
                "placeholder": "device_id_here"
              }
            }
          }
        },
        "spotify.set_volume": {
          "name": "Set Volume",
          "description": "Adjusts the playback volume to a specified level",
          "schema": {
            "fields": {
              "volume_percent": {
                "label": "Volume Level (0-100)",
                "placeholder": "50"
              },
              "device_id": {
                "label": "Device ID (optional, uses active device if empty)",
                "placeholder": "device_id_here"
              }
            }
          }
        }
      },
      "properties": {
        "success": {
          "description": "Whether the operation was successful"
        },
        "action": {
          "description": "The action performed (pause or resume)"
        },
        "playlist_id": {
          "description": "The ID of the playlist the track was added to (null if added to Liked Songs)"
        },
        "added_to_liked": {
          "description": "Whether the track was added to Liked Songs"
        },
        "track_uri": {
          "description": "The URI of the track that was added"
        },
        "uri": {
          "description": "The URI that was played"
        },
        "device_id": {
          "description": "The device ID used for playback"
        },
        "volume_percent": {
          "description": "The volume level that was set"
        }
      }
    }
  }
}
